{
    "$id": "review",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Review",
    "type": "object",
    "required": [
        "rating",
        "comment"
    ],
    "properties": {
        "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5
        },
        "comment": {
            "type": "string",
            "minLength": 1
        }
    }
}