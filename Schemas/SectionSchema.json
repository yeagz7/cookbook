{
    "$id": "section",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Section",
    "type": "object",
    "required": [
        "name",
        "steps"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1
            }
        }
    }
}